{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "YOUR_API_KEY"
      ]
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    }
  },
  "notes": [
    "Add other MCP servers as needed.",
    "Gemini users can copy this into ~/.gemini/antigravity/mcp_config.json."
  ]
}
